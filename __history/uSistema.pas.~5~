unit uSistema;

interface

  type TCodigo = class
    public
    Codigo:Integer;
    function getCodigo:Integer;
    procedure setCodigo(aCodigo:Integer);
    constructor Create (aCodigo:Integer);
  end;

implementation


{ TCodigo }

constructor TCodigo.Create(aCodigo: Integer);
  begin
    Codigo := aCodigo;
  end;

function TCodigo.getCodigo: Integer;
  begin
    Result := Self.Codigo;
  end;

procedure TCodigo.setCodigo(aCodigo: Integer);
  begin
    Self.Codigo := aCodigo;
  end;

end.
