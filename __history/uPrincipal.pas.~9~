  end;


procedure TForm1.FormCreate(Sender: TObject);
  begin
    Lista.ColCount := 2;
    Lista.RowCount := 1;
    Lista.Cells[0, 0] := 'Código';
    Lista.Cells[1, 0] := 'Nome';


    Lista.ColWidths[0] := 200;
    Lista.ColWidths[1] := 300;
  end;

